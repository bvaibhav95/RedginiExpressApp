<div id="contactus" class="modal-dialog cascading-modal modal-lg" role="document">
	<div class="modal-content">
		<div class="modal-header customColorForm white-text">
			<h2 class="title"><i class="fas fa-pencil-alt"></i>&nbsp;Contact us</h2>
		</div>
		<div class="modal-body" >
			<form id="" action="/sent" method="POST">
				<input type="hidden" name="_csrf" value="{{csrfToken}}">
				<div class="md-form form-sm">
					<i class="far fa-user prefix"></i>
					<input type="text" id="contactform_name" class="form-control form-control-sm" name="contactform_name" required>
					<label for="contactform_name">Your name</label>
				</div>

				<div class="md-form form-sm">
					<i class="far fa-envelope prefix"></i>
					<input type="text" id="contactform_email" class="form-control form-control-sm" name="contactform_email" required>
					<label for="contactform_email">Your email</label>
				</div>

				<div class="md-form form-sm">
					<i class="fas fa-mobile-alt prefix"></i>
					<input maxlength="10" type="text" id="contactform_phone" class="form-control form-control-sm" name="contactform_phone" required>
					<label for="contactform_phone">Your mobile number</label>
				</div>

				<div class="md-form form-sm">
					<i class="far fa-edit prefix"></i>
					<textarea type="text" id="contactform_message" class="md-textarea form-control" name="contactform_message" required></textarea>
					<label for="contactform_message">Your message</label>
				</div>

				<div class="text-center mt-4 mb-2">
					<button type="submit" class="btn btn-md customColorBtn">Send&nbsp;<i class="far fa-paper-plane"></i></button>
				</div>
			</form>
		</div>
	</div>
</div>
					