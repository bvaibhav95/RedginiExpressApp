<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Redgini | My shopping cart</title>
    <link rel="stylesheet" href="/stylesheets/dependencies/bootstrap.min.css">
    <link href="https://use.fontawesome.com/releases/v5.0.7/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/footer.css"/>
    <link rel="stylesheet" href="/stylesheets/header.css"/>
    <link rel="stylesheet" href="/stylesheets/shoppingCart.css"/>
</head>
  <body id="cartpage">
    {{>header}}
    
    <div id="offerCarousal" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="row">
              <div class="col-md-3 col-sm-4 col-6">
                <img class="d-block w-100" src="/images/usp2.jpg" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6">
                <img class="d-block w-100" src="/images/usp7.png" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6 hidden-xs-down">
                <img class="d-block w-100" src="/images/usp3.jpg" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6 hidden-sm-down">
                <img class="d-block w-100" src="/images/usp4.png" alt="First slide">
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <div class="row">
              <div class="col-md-3 col-sm-4 col-6">
                <img class="d-block w-100" src="/images/usp1.jpg" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6">
                <img class="d-block w-100" src="/images/usp7.png" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6 hidden-xs-down">
                <img class="d-block w-100" src="/images/usp4.png" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6 hidden-sm-down">
                <img class="d-block w-100" src="/images/usp2.jpg" alt="First slide">
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <div class="row">
              <div class="col-md-3 col-sm-4 col-6">
                <img class="d-block w-100" src="/images/usp7.png" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6">
                <img class="d-block w-100" src="/images/usp2.jpg" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6 hidden-xs-down">
                <img class="d-block w-100" src="/images/usp6.png" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6 hidden-sm-down">
                <img class="d-block w-100" src="/images/usp1.jpg" alt="First slide">
              </div>
            </div>
          </div>
        </div>
    </div>
    <hr>
    {{#if cart.totalQty}}
    <div class="container-fluid" style="background-color:#f3f2f2;">
        <div class="container">
            <div class="row justify-content-between" id="cartItemList">
              <div class="col-md-7">
                  <div class="list-group">
                    {{#each cart.items}}
                      <div class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between cartCakeNameAndCost">
                          <h5 class="mb-1">{{this.item.name}} | {{this.cakeWt}}&nbsp;Kg</h5>
                          <small>Net cost - Rs. {{this.netPrice}}/-</small>
                        </div>
                        <p class="mb-1 cakeQty">Total quantity - {{this.cakeQty}}</p>
                        <div class="d-flex w-100 justify-content-between">
                          <small>{{this.cakeWt}} Kg cost - Rs.{{this.unitCost}}/-</small>
                          <a href="/remove/{{this.item.cakeId}}{{this.cakeWt}}" class="btn btn-sm removeItemBtn"><i class="fas fa-trash-alt"></i></a>
                        </div>
                      </div>
                    {{/each}}
                  </div>
                  <a href="/products/blackforest" id="addMoreCakesBtn" class="btn btn-sm" type="button">Add more cakes</a>
              </div>
              <div class="col-md-4">
                  <div id="paymentDetails">
                    <div class="d-flex w-100 justify-content-between">
                          <h5 class="mb-1">Total cost - </h5>
                          <small>Rs. {{cart.totalPrice}} /-</small>
                        </div>
                    <p>Free home delivery</p>
                  </div>
                  <a href="/checkout" id="checkoutBtn" type="button" class="btn btn-sm">Checkout now</a>
                  <div id="upcomingPaymentOptions" class="hidden-sm-down">
                    <p>We accept online payments via</p>
                    <div class="row justify-content-around">
                      <div class="col-md-2">
                        <img src="/images/paytm.jpg" alt="paytm">
                      </div>
                      <div class="col-md-2">
                        <img src="/images/visa.png" alt="visa">
                      </div>
                      <div class="col-md-2">
                        <img src="/images/mastercard.png" alt="mastercard">
                      </div>
                      <div class="col-md-2">
                        <img src="/images/upi.png" alt="UPI">
                      </div>
                      <div class="col-md-2">
                        <img src="/images/tez.jpg" alt="tez">
                      </div>
                      <div class="col-md-2">
                        <img src="/images/pe.jpg" alt="phonepe">
                      </div>
                    </div>
                  </div>
              </div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="container" id="emptyCartMsg">
      <div class="row justify-content-center">
        <img src="/images/emptycart.jpg" alt="empty shopping cart">
        <div class="w-100"></div>
        <a id="startShopping" href="/products/blackforest" class="btn" type="button">Start with some cakes!</a>
      </div>
    </div>
    {{/if}}
    {{>footer}}
    <script src="/javascripts/dependencies/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.3/js/tether.min.js"></script>
    <script src="/javascripts/dependencies/bootstrap.min.js"></script>
    <script src="/javascripts/shoppingCart.js" type="text/javascript"></script>
  </body>