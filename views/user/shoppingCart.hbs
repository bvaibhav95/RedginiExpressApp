    <link rel="stylesheet" href="/stylesheets/userProfile.css">
  </head>
  <body id="cartpage">
    {{>header}}
    
    <div id="offerCarousal" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="row">
              <div class="col-md-3 col-sm-4 col-6">
                <img class="d-block w-100" src="/images/usp2.jpg" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6">
                <img class="d-block w-100" src="/images/usp7.png" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6 hidden-xs-down">
                <img class="d-block w-100" src="/images/usp3.jpg" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6 hidden-sm-down">
                <img class="d-block w-100" src="/images/usp4.png" alt="First slide">
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <div class="row">
              <div class="col-md-3 col-sm-4 col-6">
                <img class="d-block w-100" src="/images/usp1.jpg" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6">
                <img class="d-block w-100" src="/images/usp7.png" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6 hidden-xs-down">
                <img class="d-block w-100" src="/images/usp4.png" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6 hidden-sm-down">
                <img class="d-block w-100" src="/images/usp2.jpg" alt="First slide">
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <div class="row">
              <div class="col-md-3 col-sm-4 col-6">
                <img class="d-block w-100" src="/images/usp7.png" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6">
                <img class="d-block w-100" src="/images/usp2.jpg" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6 hidden-xs-down">
                <img class="d-block w-100" src="/images/usp6.png" alt="First slide">
              </div>
              <div class="col-md-3 col-sm-4 col-6 hidden-sm-down">
                <img class="d-block w-100" src="/images/usp1.jpg" alt="First slide">
              </div>
            </div>
          </div>
        </div>
    </div>
    <hr>
    {{#if cart.totalQty}}
    <div class="container-fluid" style="background-color:#f3f2f2;">
        <div class="container">
            <div class="row justify-content-between" id="cartItemList">
              <div class="col-md-7">
                  <div class="list-group">
                    {{#each cart.items}}
                      <div class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between cartCakeNameAndCost">
                          <h5 class="mb-1">{{this.item.name}} | {{this.cakeWt}}&nbsp;Kg</h5>
                          <small>Net cost - Rs. {{this.netPrice}}/-</small>
                        </div>
                        <p class="mb-1 cakeQty">Total quantity - {{this.cakeQty}}</p>
                        <div class="d-flex w-100 justify-content-between">
                          <small>{{this.cakeWt}} Kg cost - Rs.{{this.unitCost}}/-</small>
                          <a href="/remove/{{this.item.cakeId}}{{this.cakeWt}}{{this.egg}}" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                        </div>
                        <small>Is cake egged - {{this.egg}}</small>
                      </div>
                    {{/each}}
                  </div>
                  <a href="/products/cakes" id="addMoreCakesBtn" class="btn btn-sm btn-danger" type="button">Add more cakes</a>
              </div>
              <div class="col-md-4">
                  <div id="paymentDetails">
                    <div class="d-flex w-100 justify-content-between">
                          <h5 class="mb-1">Total cost - </h5>
                          <small>Rs. {{cart.totalPrice}} /-</small>
                        </div>
                    <p>Free home delivery</p>
                  </div>
                  <a href="/checkout" id="checkoutBtn" type="button" class="btn btn-sm btn-danger">Checkout now</a>
                  <div id="upcomingPaymentOptions" class="hidden-sm-down">
                    <p>We accept online payments via</p>
                    <div class="row justify-content-around">
                      <div class="col-md-2">
                        <img src="/images/paytm.jpg" alt="paytm">
                      </div>
                      <div class="col-md-2">
                        <img src="/images/visa.png" alt="visa">
                      </div>
                      <div class="col-md-2">
                        <img src="/images/mastercard.png" alt="mastercard">
                      </div>
                      <div class="col-md-2">
                        <img src="/images/upi.png" alt="UPI">
                      </div>
                      <div class="col-md-2">
                        <img src="/images/tez.jpg" alt="tez">
                      </div>
                      <div class="col-md-2">
                        <img src="/images/pe.jpg" alt="phonepe">
                      </div>
                    </div>
                  </div>
              </div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="container" id="emptyCartMsg">
      <div class="row justify-content-center">
        <img src="/images/emptycart.jpg" alt="empty shopping cart">
        <div class="w-100"></div>
        <a id="startShopping" href="/products/blackforest" class="btn btn-danger btn-sm" type="button">Start with some cakes!</a>
      </div>
    </div>
    {{/if}}
    {{>footer}}
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.13.0/umd/popper.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.0/js/mdb.min.js"></script>
      
    <script src="/javascripts/shoppingCart.js" type="text/javascript"></script>
  </body>