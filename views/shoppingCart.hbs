<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Redgini | My shopping cart</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/footer.css"/>
    <link rel="stylesheet" href="/stylesheets/plainNav.css"/>
    <link rel="stylesheet" href="/stylesheets/shoppingCart.css"/>
    <link rel="stylesheet" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
</head>
  <body id="cartpage">
    {{>plainNav}}

    <div class="container-fluid" style="background-color:#f3f2f2">
      <div class="container">
      <h2 id="table_header">My Shopping cart</h2>
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th class="hidden-md-down">Sr.No</th>
            <th>Name</th>
            <th>Price/cake</th>
            <th>Quantity</th>
            <th>Weight</th>
            <th>Total</th>
            <th>Remove</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th class="sr_no hidden-md-down" scope="row">1</th>
            <td class="cart_img"><img src="img/cake4.jpg" alt="" class="img-rounded cart_cake_img">Mark</td>

            <td class="cart_unitprice">Rs. 500</td>
            <td class="cake_qty">3</td>
            <td class="cart_qty_col">2 Kg
            </td>
            <td class="cart_total">Rs. 1500</td>
            <td class="cart_remove_btn"><a class="btn btn-danger" href="#"><i class="fa fa-trash-o" aria-hidden="true"></i></a></td>
          </tr>
          <tr class="alert alert-info">
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>NET TOTAL</td>
            <td>Rs.1500/-</td>
          </tr>
        </tbody>
     </table>

     <div class="row" id="cart_btn">
       <div class="col-md-4">
         <a href="/products"><button type="button" name="button" class="btn pull-left" id="cart_back" style="font-size:bold">Add more cakes!</button></a>
       </div>
       <div class="col-md-4"></div>
       <div class="col-md-4">
         <a href="/checkout"><button type="button" name="button" class="btn pull-right" id="cart_checkout">Checkout</button></a>
       </div>
     </div>
     </div>
    </div>
    {{>footer}}
    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/script.js" type="text/javascript"></script>
  </body>