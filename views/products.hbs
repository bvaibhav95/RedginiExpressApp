                    <a href="/products/fruit" class="dropdown-item">Fruit cakes</a>
                    <a href="/products/pineapple" class="dropdown-item">Pineapple cakes</a>
                    <a href="/products/redvelvet" class="dropdown-item">Red velvet cakes</a>
                    <a href="/products/strawberryvanilla" class="dropdown-item">Strawberry vanilla cakes</a>
                    <a href="/products/truffle" class="dropdown-item">All Truffle cakes</a>
                    <a href="/products/whiteforest" class="dropdown-item">White Forest cakes</a>
                    <a href="/products/designer-fondant" class="dropdown-item"><b>Designer+Fondant</b></a>
                  </div>
                </div>
              </div>
          </div>
          <div class="col-md-9 col-sm-12 col-xs-12">
            {{#if designerAndFondant}}
              {{>designer-fondant}}
            {{else}}
              {{>regularCakes}}
            {{/if}}
          </div>
        </div>
      </div>

      {{>footer}}

